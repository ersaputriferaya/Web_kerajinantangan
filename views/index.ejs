    <hr>

    <br>
    <br>
    <br>
    <div class="container">
        <form action="/submit" method="post">

            <fieldset align="center">


                <legend align="center">Login</legend>

                <br>
                <p>
                    <!-- <label><br> Email : </label> -->
                    <input type="text" name="email" placeholder="Masukkan Email" style="width: 200px; height: 25px;">
                </p>

                <p>
                    <input type="password" name="password" id="inputPassword" placeholder="Masukkan Password" required
                        style="width: 200px; height: 25px">
                    <br><br>
                    <input type="checkbox" onclick="myFunction()">Tampilkan Password

                    <script>
                        function myFunction() {
                            var x = document.getElementById("inputPassword");
                            if (x.type === "password") {
                                x.type = "text";
                            } else {
                                x.type = "password";
                            }
                        }
                    </script>

                    <br>
                    <br>
                    <br>
                    <button class="button"
                        onclick="alert('Email dan password anda sudah benar, silahkan masuk')">Login</button>
                </p>
            </fieldset>

        </form>
    </div>
</body>

</html>